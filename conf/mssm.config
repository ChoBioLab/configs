// Profile details
params {
    config_profile_description = 'The Wellcome Sanger Institute HPC cluster (farm5) profile'
    config_profile_description = 'Icahn School of Medicine at Mount Sinai HPC (minerva) profile'
    config_profile_contact = 'Chris Tastad (christopher.tastad@mssm.edu)'
    config_profile_url = 'https://labs.icahn.mssm.edu/minervalab/'
}

// Queue and retry strategy
process{
    executor = 'lsf'
    clusterOptions = '-P acc_ipm'
    queue = { task.time <= 12.h ? 'express' : task.time <= 144.h ? 'premium' : 'long' }
    errorStrategy = 'retry'
    maxRetries = 2
}

// Executor details
executor{
    name = 'lsf'
    queueSize = 200
    submitRateLimit = '10 sec'
    beforeScript = 'ml java'
    beforeScript = 'ml anaconda3'
    beforeScript = 'ml singularity'
}

// Max resources
params {
    max_memory = 192.GB
    max_cpus = 48
    max_time = 144.h
}

